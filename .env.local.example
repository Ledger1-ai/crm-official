# Environment template for AWS/Azure outreach
# Copy to .env.local and fill values discovered via AWS CLI

# AWS region (connect.ts defaults to us-east-1 if missing)
AWS_REGION=us-west-2

# Amazon Chime SDK (PSTN Bridge) configuration
CHIME_REGION=us-west-2

# Azure General
AZURE_GATEWAY_URL=
AZURE_WEB_APP_NAME=basalt-crm

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-5
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_REALTIME_API_VERSION=2025-04-01-preview
AZURE_OPENAI_REALTIME_DEPLOYMENT=gpt-realtime

# Azure Blob Storage
BLOB_STORAGE_ACCOUNT=
BLOB_STORAGE_API_KEY=
BLOB_STORAGE_CONNECTION_STRING=
BLOB_STORAGE_CONTAINER=

# Database
CHAT_DATABASE_URL=
CRM_DATABASE_URL=
DATABASE_URL=

# Amazon Chime
CHIME_APP_MEETING_REGION=us-west-2
# Phone number claimed/ported to Chime Voice Connector (used by SIP Media Application)
CHIME_SMA_PHONE_NUMBER=
# Chime Voice / SIP Media Application outbound call configuration
CHIME_SMA_APPLICATION_ID=
CHIME_SMA_ID=
CHIME_SMA_PHONE_NUMBER=
CHIME_SOURCE_PHONE=
CHIME_VOICE_REGION=us-west-2
# Inbound bridge target (E.164 +1... or sip:URI), used by SMA CallAndBridge
CHIME_BRIDGE_ENDPOINT_URI=

# Amazon Connect identifiers
CONNECT_INSTANCE_ID=
CONNECT_CONTACT_FLOW_ID=
CONNECT_INSTANCE_ID=
CONNECT_QUEUE_ID=

# Amazon Connect profiles for auto-provisioning new agents (ensureConnectUser)
# Set one of the following:
# - CONNECT_SECURITY_PROFILE_ID for a single profile
# - CONNECT_SECURITY_PROFILE_IDS for multiple comma-separated profile IDs
CONNECT_ROUTING_PROFILE_ID=
CONNECT_SECURITY_PROFILE_ID=
#CONNECT_SECURITY_PROFILE_IDS=

# Amazon SES
SES_REGION=us-west-2
SES_FROM_ADDRESS=

# Amazon Pinpoint (SMS)
PINPOINT_APPLICATION_ID=
PINPOINT_ORIGINATION_NUMBER=

# Optional: KMS key used for Connect storage (recordings/transcripts/reports)
OPTIONAL_KMS_ARN=arn:aws:kms:us-west-2:867344432514:key/0f7ee07b-6465-476d-b43c-ee1433431a37

# Azure OpenAI (Realtime suggestions panel; not used to auto-call)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_ID=
# Optional extras if your implementation uses them
AZURE_OPENAI_SPEECH_REGION=
AZURE_OPENAI_SPEECH_KEY=

# Amazon Connect Streams CCP base URL (used by ConnectStreamsSoftphone)
NEXT_PUBLIC_CONNECT_BASE_URL=https://ledger1crm.my.connect.aws

# App Base URL
NEXT_PUBLIC_APP_URL=https://crm.basalthq.com

# Azure OpenAI Realtime WebRTC (client configuration)
# Example endpoint: https://<your-azure-endpoint>/openai/realtime
NEXT_PUBLIC_AZURE_OPENAI_REALTIME_WEBRTC_URL=
NEXT_PUBLIC_AZURE_OPENAI_REALTIME_DEPLOYMENT=
NEXT_PUBLIC_AZURE_OPENAI_REALTIME_API_VERSION=

# Amazon Connect Streams SDK (local fallback for containerized app)
# Point to the locally served SDK to avoid external CDN/DNS dependencies
NEXT_PUBLIC_CONNECT_STREAMS_URL=/connect/connect-streams.js

# Azure Gateway (health check used by Call Tools UI)
NEXT_PUBLIC_AZURE_GATEWAY_HEALTH_URL=
# Azure Gateway base URL for server-side AgentBot start
AZURE_GATEWAY_URL=

# Seed Configuration
ADMIN_PASSWORD=

# # AWS SES (Required for Mass Email)
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
SES_FROM_ADDRESS=system@yourdomain.com

# Microsoft (Required for Calendar)
AZURE_CLIENT_ID=...
AZURE_CLIENT_SECRET=...
AZURE_TENANT_ID=common